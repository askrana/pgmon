--
-- Metric Dimension Names Query
--
-- Templates: metric_name
-- Arguments: metric_name
--
#}
SELECT DISTINCT
    JSONB_OBJECT_KEYS(dimensions) AS dimension_name
FROM
    metrics.metrics
{% if metric_name is not none %}
WHERE
    name = %(metric_name)s
{% endif %}
ORDER BY
    1
;
